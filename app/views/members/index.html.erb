  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.19.1/moment.js"></script>

  <script src="https://drvic10k.github.io/bootstrap-sortable/Scripts/bootstrap-sortable.js"></script>

  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

<div class="background">
<p id="notice"><%= notice %></p>

<h1>Members</h1><br>
<div class ="search_bar">
    <%= form_tag members_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
    <% end %>
    <br>
  </div>
<section class="">
<div class="table101">
  <%= link_to 'New Member', new_member_path, class: "add" %> <%= link_to 'Export Data', '/members.pdf', class: "add" %> <%= link_to 'Back', 'javascript:history.back()', class: "backbtn" %>
<table class="table table-bordered sortable">
  <thead>
    <tr class="table100-head">
      <th class="column1">Peoplesoft</th>
      <th class="column2">Full name</th>
      <th class="column3">Student class</th>
      <th class="column4">Major</th>
      <th class="column5">Paid</th>
      <th class="column6">Member Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td class="column1"><%= member.peoplesoft_id %></td>
        <td class="column2"><%= member.first_name + ' ' %> <% if member.middle_initial.present? %>
            <%= member.middle_initial + '. ' %>
          <% else %>
          <% end %> <%= member.last_name %></td>
        <td class="column3"><%= member.student_class.student_class %></td>
        <td class="column4"><%= member.major %></td>
        <td class="column5"><% member.payment %> <% if member.payment == true %>
            <%= image_tag "check.png", class: "check"%>
          <% else %>
            <%= image_tag "cross.png", class: "cross"%>
          <% end %></td>
        <td class="column6"><%= member.member_status.status %></td>
        <td class="column7"><%= link_to 'View Contact', member, class: "show" %></td>
        <td class="column8"><%= link_to 'Edit Contact', edit_member_path(member), class: "show" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</section>
</div>
