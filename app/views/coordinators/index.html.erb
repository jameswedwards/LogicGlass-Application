 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>

 <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

 <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.19.1/moment.js"></script>

 <script src="https://drvic10k.github.io/bootstrap-sortable/Scripts/bootstrap-sortable.js"></script>

 <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
<div class="background">
<p id="notice"><%= notice %></p>

<h1>Coordinators</h1><br>
<div class ="search_bar">
    <%= form_tag coordinators_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
    <% end %>
    <br>
  </div>
<section class="">
<div class="table103">
  <%= link_to 'New Coordinator', new_coordinator_path, class: "add" %> <%= link_to 'Export Data', '/coordinators.pdf', class: "add" %> <%= link_to 'Back', 'javascript:history.back()', class: "backbtn" %>
<table class="table table-bordered sortable">
  <thead>
    <tr class="table100-head">
      <th>Peoplesoft</th>
      <th>Full Name</th>
      <th>Position</th>
      <th>Student Class</th>
      <th>Major</th>
      <th>Paid</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coordinators.each do |coordinator| %>
      <tr>
        <td><%= coordinator.peoplesoft_id %></td>
        <td><%= coordinator.first_name + ' ' %> <% if coordinator.middle_initial.present? %>
            <%= coordinator.middle_initial + '. ' %>
          <% else %>
          <% end %> <%= coordinator.last_name %></td>
        <td><%= coordinator.coordinator_position.position %></td>
        <td><%= coordinator.student_class.student_class %></td>
        <td><%= coordinator.major %></td>
        <td><% coordinator.payment %> <% if coordinator.payment == true %>
            <%= image_tag "check.png", class: "check"%>
          <% else %>
            <%= image_tag "cross.png", class: "cross"%>
          <% end %></td>
        <td><%= coordinator.coordinator_status.status %></td>
        <td class="column8"><%= link_to 'View Contact', coordinator, class: "show" %></td>
        <td class="column9"><%= link_to 'Edit Contact', edit_coordinator_path(coordinator), class: "show" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</section>
</div>
