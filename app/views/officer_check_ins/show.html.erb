<div class="background">
<p id="notice"><%= notice %></p>
<div class="show-box">
<div class="show-container">
  <h1>Officer Check In</h1><br>
<ul class="w3-ul w3-xlarge">
<li>
  <strong>Officer:</strong>
  <%= @officer_check_in.officer.full_name %>
</li>

<li>
  <strong>Event:</strong>
  <%= @officer_check_in.event.description %>
</li>

<li>
  <strong>Check In Time:</strong>
  <%= @officer_check_in.check_in_date.strftime("%I:%M %p") %>
