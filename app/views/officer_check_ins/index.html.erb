 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>

 <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

 <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.19.1/moment.js"></script>

 <script src="https://drvic10k.github.io/bootstrap-sortable/Scripts/bootstrap-sortable.js"></script>

 <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
<div class="background">
<p id="notice"><%= notice %></p>
<div class="w3-center"><%= link_to "Member Check In", member_check_ins_path, class: "minimenu" %>
<%= link_to "Officer Check In", officer_check_ins_path, class: "minimenu" %>
<%= link_to "Coordinator Check In", coordinator_check_ins_path, class: "minimenu" %></div>
<h1>Officer Check-Ins</h1>
<div class ="search_bar">
    <%= form_tag officer_check_ins_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
    <% end %>
    <br>
  </div>
<section class="">
<div class="table106">
  <%= link_to 'New Officer Check In', new_officer_check_in_path, class: "add" %> <%= link_to 'Back', check_in_menu_path, class: "backbtn" %>
<table class="table table-bordered sortable">
  <thead>
    <tr class="table100-head">
      <th class="column1">Officer</th>
      <th>Event</th>
      <th>Check in time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @officer_check_ins.each do |officer_check_in| %>
      <tr>
        <td class="column1"><%= officer_check_in.officer.full_name %></td>
        <td><%= officer_check_in.event.description %></td>
        <td><%= officer_check_in.check_in_date.strftime("%b %e %Y %I:%M %p") %></td>
        <td><%= link_to 'View Check In', officer_check_in, class: "show" %></td>
        <td><%= link_to 'Edit Check In', edit_officer_check_in_path(officer_check_in), class: "show" %></td>
        <td><%= link_to 'Delete', officer_check_in, method: :delete, data: { confirm: 'Are you sure?' }, class: "show" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</section>
</div>
