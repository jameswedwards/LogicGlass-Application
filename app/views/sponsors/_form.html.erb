<div class="sponsor-container">
<%= form_with(model: sponsor, local: true, html: {class: "sponsor-form"}) do |form| %>
  <% if sponsor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sponsor.errors.count, "error") %> prohibited this sponsor from being saved:</h2>

      <ul>
        <% sponsor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="wholeForm">
    <div class="row">
      <div class="field">
        <%= form.label :company, class: "required" %>
        <%= form.text_field :company, :size=>"25" %>
      </div>
      <div class="field">
        <%= form.label :first_name, class: "required" %>
        <%= form.text_field :first_name %>
      </div>
      <div class="field">
        <%= form.label :last_name, class: "required" %>
        <%= form.text_field :last_name %>
      </div>
    </div>

    <div class="row">
      <div class="status">
        <div class="field">
          <%= form.label :sponsor_type_id, class: "required" %>
          <%= form.collection_select :sponsor_type_id, SponsorType.all, :id, :sponsor_type, {:prompt => 'Select Sponsor Type'} %>
          <%= form.fields_for :sponsor_type do |t| %>
            <%= render 'sponsor_type_fields', :f => t %>
          <% end %>
          <div class='links'>
            <%= link_to_add_association 'Add a Sponsor Type', form, :sponsor_type %>
          </div>
        </div>
      </div>

      <div class="statusRow">
        <div class="field">
          <%= form.label :home_phone %>
          <%= form.text_field :home_phone, :size=>"16", placeholder: "XXX-XXXX-XXXX" %>
        </div>
        <div class="field">
          <%= form.label :mobile_phone, class: "required" %>
          <%= form.text_field :mobile_phone, :size=>"16", placeholder: "XXX-XXXX-XXXX" %>
        </div>
      </div>
    </div>

      <div class="actions">
        <%= form.submit %>
      </div>

  </div>
<% end %>
</div>
