  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>

  <script src="https://drvic10k.github.io/bootstrap-sortable/Scripts/bootstrap-sortable.js"></script>
<div class="background">
<p id="notice"><%= notice %></p>

<h1>Events</h1><br>
<div class ="search_bar">
    <%= form_tag events_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
    <% end %>
    <br>
  </div>
<section class="">
<div class="table100">
  <%= link_to 'New Event', new_event_path, class: "add" %> <%= link_to 'Export Data', '/events.pdf', class: "add" %> <%= link_to 'Back', 'javascript:history.back()', class: "backbtn" %>
<table class="table table-bordered sortable">
  <thead>
    <tr class="table100-head">
      <th>Description</th>
      <th>Date</th>
      <th>Type</th>
      <th>Status</th>
      <th>Sponsor</th>
      <th>Fee</th>
      <th>Address</th>
      <th>Building</th>
      <th>City</th>
      <th>ZIP</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.description %></td>
        <td><%= event.event_date.strftime("%b %e %Y %I:%M %p") %></td>
        <td><%= event.event_type.event_type %></td>
        <td><%= event.event_status.status %></td>
        <td><%= event.sponsor.full_name %></td>
        <td><%= number_to_currency(event.fee) %></td>
        <td><%= event.address %></td>
        <td><%= event.building_name %></td>
        <td><%= event.city %></td>
        <td><%= event.zip %></td>
        <td><%= event.state.state_abbreviation %></td>
        <td><%= event.country.country_abbreviation %></td>
        <td class="column13"><%= link_to 'View Event', event, class: "show" %></td>
        <td class="column14"><%= link_to 'Edit Event', edit_event_path(event), class: "show" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</section>
</div>
