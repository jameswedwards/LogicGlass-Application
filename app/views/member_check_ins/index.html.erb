<div class="background">
<p id="notice"><%= notice %></p>
<div class="w3-center"><%= link_to "Member Check In", member_check_ins_path, class: "minimenu" %>
<%= link_to "Officer Check In", officer_check_ins_path, class: "minimenu" %>
<%= link_to "Coordinator Check In", coordinator_check_ins_path, class: "minimenu" %></div>
<h1>Member Check Ins</h1><br>
<div class ="search_bar">
    <%= form_tag member_check_ins_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
    <% end %>
    <br>
  </div>
<section class="">
<div class="table105">
  <%= link_to 'New Member Check In', new_member_check_in_path, class: "add" %> <%= link_to 'Back', check_in_menu_path, class: "backbtn" %>
<table class="table table-bordered sortable">
  <thead>
    <tr class="table100-head">
      <th class="column1">Member</th>
      <th class="column2">Event</th>
      <th class="column3">Check in time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @member_check_ins.each do |member_check_in| %>
      <tr>
        <td class="column1"><%= member_check_in.member.full_name %></td>
        <td class="column2"><%= member_check_in.event.description %></td>
        <td class="column3"><%= member_check_in.check_in_date.strftime("%I:%M %p") %></td>
        <td class="column4"><%= link_to 'View Check In', member_check_in, class: "show" %></td>
        <td class="column5"><%= link_to 'Edit Check In', edit_member_check_in_path(member_check_in), class: "show" %></td>
        <td class="column6"><%= link_to 'Delete', member_check_in, method: :delete, data: { confirm: 'Are you sure?' }, class: "show" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</section>
</div>
