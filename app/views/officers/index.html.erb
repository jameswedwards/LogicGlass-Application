<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.19.1/moment.js"></script>

<script src="https://drvic10k.github.io/bootstrap-sortable/Scripts/bootstrap-sortable.js"></script>

<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
<div class="background">
<p id="notice"><%= notice %></p>

<h1>Officers</h1><br>
<div class ="search_bar">
    <%= form_tag officers_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
    <% end %>
    <br>
  </div>
<section class="">
<div class="table102">
  <%= link_to 'New Officer', new_officer_path, class: "add" %> <%= link_to 'Export Data', '/officers.pdf', class: "add" %> <%= link_to 'Back', 'javascript:history.back()', class: "backbtn" %>
<table class="table table-bordered sortable">
  <thead>
    <tr class="table100-head">
      <th>Peoplesoft</th>
      <th>Full Name</th>
      <th>Position</th>
      <th>Student Class</th>
      <th>Major</th>
      <th>Paid</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @officers.each do |officer| %>
      <tr>
        <td><%= officer.peoplesoft_id %></td>
        <td><%= officer.first_name + ' ' %> <% if officer.middle_initial.present? %>
            <%= officer.middle_initial + '. ' %>
          <% else %>
          <% end %> <%= officer.last_name %></td>
        <td><%= officer.officer_position.position %></td>
        <td><%= officer.student_class.student_class %></td>
        <td><%= officer.major %></td>
        <td><% officer.payment %> <% if officer.payment == true %>
            <%= image_tag "check.png", class: "check"%>
          <% else %>
            <%= image_tag "cross.png", class: "cross"%>
          <% end %></td>
        <td><%= officer.officer_status.status %></td>
        <td class="column8"><%= link_to 'View Contact', officer, class: "show" %></td>
        <td class="column9"><%= link_to 'Edit Contact', edit_officer_path(officer), class: "show" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</section>
</div>
