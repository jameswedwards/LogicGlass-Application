<div class="background">
<p id="notice"><%= notice %></p>
<div class="show-box">
<div class="show-container">
  <h1>Officer</h1><br>
<ul class="w3-ul w3-xlarge">
<li>
  <strong>Peoplesoft:</strong>
  <%= @officer.peoplesoft_id %>
</li>

<li>
  <strong>Position:</strong>
  <%= @officer.officer_position.position %>
</li>

<li>
  <strong>First name:</strong>
  <%= @officer.first_name %>
</li>

<li>
  <strong>Middle initial:</strong>
  <% @officer.middle_initial %>
  <% if @officer.middle_initial.present? %>
  <%= @officer.middle_initial + '.' %>
  <% else %>
    <%= @officer.middle_initial %>
  <% end %>
</li>

<li>
  <strong>Last name:</strong>
  <%= @officer.last_name %>
</li>

<li>
  <strong>Date of birth:</strong>
  <%= @officer.date_of_birth %>
</li>

<li>
  <strong>Address:</strong>
  <%= @officer.address %>
</li>

<li>
  <strong>City:</strong>
  <%= @officer.city %>
</li>

<li>
  <strong>Zip:</strong>
  <%= @officer.zip %>
</li>

<li>
  <strong>State:</strong>
  <%= @officer.state.name %>
</li>

<li>
  <strong>Country:</strong>
  <%= @officer.country.name %>
</li>

<li>
  <strong>Home phone:</strong>
  <%= @officer.home_phone %>
</li>

<li>
  <strong>Mobile phone:</strong>
  <%= @officer.mobile_phone %>
</li>

<li>
  <strong>Officer status:</strong>
  <%= @officer.officer_status.status %>
</li>

<li>
  <strong>Payment:</strong>
  <% @officer.payment %> <% if @officer.payment == true %>
      <%= image_tag "check.png", class: "check"%>
    <% else %>
      <%= image_tag "cross.png", class: "cross"%>
    <% end %>
</li>

<li>
  <strong>Student class:</strong>
  <%= @officer.student_class.student_class %>
</li>

<li>
  <strong>Major:</strong>
  <%= @officer.major %>
</li>

<%= link_to 'Edit', edit_officer_path(@officer) %> |
<%= link_to 'Back', officers_path %>
</div>
</div>
</div>
